{
  "name": "Slooze",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "cd apps/web && pnpm run start",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "backend:start": "cd apps/backend/prisma && npx prisma generate && cd .. && nest build && nest start"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.9",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
